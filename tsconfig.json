{
  "compilerOptions": {
    "outDir": "./lib",
    "noImplicitAny": true,
    "module": "ESNext",
    "lib": ["ES2015", "DOM"],
    "target": "ESNext",
    "jsx": "react-jsx",
    "allowJs": true,
    "moduleResolution": "Bundler",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "sourceMap": true,
    "declaration": true,
    "paths": {
      "@/*": ["./src/*"],
      "@components/*": ["src/components/*"],
      "@webpack/*": ["src/config/build/webpack/*"],
      "@utils/*": ["src/utils/*"]
    }
  },
  
  "include": [
    "src/**/**/*.ts",
  ],
  "exclude": ["node_modules", "dist", ".storybook", "lib", "./src/components/examples/**/**/*"], 
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  }
}
