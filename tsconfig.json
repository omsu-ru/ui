{
  "compilerOptions": {
    "outDir": "./lib",
    "noImplicitAny": true,
    "module": "ESNext",
    "lib": ["ES2015", "DOM"],
    "target": "ESNext",
    "jsx": "react-jsx",
    "allowJs": true,
    "moduleResolution": "Bundler",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "sourceMap": true,
    "declaration": true,
    "paths": {
      "@/*": ["./src/*"],
      "@components/*": ["src/components/*"],
      "@webpack/*": ["src/config/build/webpack/*"],
      "@utils/*": ["src/utils/*"]
    }
  },
  "exclude": ["node_modules", "dist", "./src/stories", ".storybook", "lib"],
  "include": [
    "src/**/**/*.ts",
    "src/components/inputs/Input/Input.stories.tsx",
    "src/components/Collapsible/Collapsible.tsx"
  ],
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  }
}
